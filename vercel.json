{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "backend/server.js",  // O "server.js" si decides cambiarlo
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"  // O "server.js" si decides cambiarlo
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/$1"
    }
  ]
}
